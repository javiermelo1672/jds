<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.javier.proyectodinny.ProfileSettingss">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/degradado"
        android:padding="20dp">

        <ImageView
            android:id="@+id/ImagenMuestra"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:background="@drawable/buttonstyle2"
            android:right="15dp" android:left="15dp" android:top="15dp" android:bottom="15dp"
            android:radius="25dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:text="txtUsuario"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textSize="30sp"
            android:layout_marginTop="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:text="txtUsuario"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textSize="15sp"
            android:layout_marginTop="5dp"/>


    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="vertical">


        <Button

            android:paddingRight="10dp"
            android:id="@+id/BtnInicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/buttonstylesms"

            android:text="Guardar"
            android:textColor="#fff" />





    </LinearLayout>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="horizontal">


    </LinearLayout>

</LinearLayout>
